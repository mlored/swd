<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http pattern="/rest/support" security="none"/>
    <http pattern="/**" use-expressions="true">
     <intercept-url pattern="/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_SECRETARIO', 'ROLE_MECANICO')" />
        <intercept-url pattern="/user**"   access="hasAnyRole('ROLE_ADMIN, ROLE_SECRETARIO, ROLE_MECANICO')" />
        <intercept-url pattern="/user/**"  access="hasAnyRole('ROLE_ADMIN, ROLE_SECRETARIO, ROLE_MECANICO')" />
        <intercept-url pattern="/roles**"  access="hasAnyRole('ROLE_ADMIN, ROLE_SECRETARIO, ROLE_MECANICO')" />
        <intercept-url pattern="/roles/**" access="hasAnyRole('ROLE_ADMIN, ROLE_SECRETARIO, ROLE_MECANICO')" />
        <http-basic/>
        <logout logout-url="/logout"/><logout/>
    </http>
 
    <!-- Select users and user_roles from database -->
	<authentication-manager>
        <authentication-provider>
	    	<password-encoder hash="bcrypt" />
            <jdbc-user-service data-source-ref="dataSource"
                users-by-username-query="select users.username, users.password, users.enabled
                    from users where users.username = ?"
                authorities-by-username-query="select users.username, roles.authority from users
                    join users_roles on users.id = users_roles.user_id
                    join roles on users_roles.role_id = roles.id and users.username = ?" />
        </authentication-provider>
    </authentication-manager>
    
    <!-- Para usar la anotacion @Secured de Spring -->
	<global-method-security secured-annotations="enabled" />
 
    
 
</beans:beans>